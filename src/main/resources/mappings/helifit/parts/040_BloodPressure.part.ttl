# 8480-6 Systolic blood pressure
<#SystolicPressureDimension> a rr:TriplesMap;
  rml:logicalSource [
    rml:source "__RML_SRC__";
    rml:referenceFormulation ql:JSONPath;
    rml:iterator "$.entry[*].resource.component[?(@.code.coding[0].code == '8480-6')]"
  ];

  rr:subjectMap [
    rr:template "http://www.samsung.com/health/data/type/HLF12/code/{code.coding[0].code}/id/{resourceId}";
    rr:class ho:HLF12SystolicPressureDim;
  ];

  #
  # Data
  #
  rr:predicateObjectMap [
    rr:predicate ho:P91hasUnit;
    rr:objectMap [
      rml:reference "valueQuantity.unit";
    ]
  ];

  rr:predicateObjectMap [
    rr:predicate ho:P90hasValue;
    rr:objectMap [
      rml:reference "valueQuantity.value";
    ]
  ];
.

