# ############################################################################ #
#                             PatientIdentifier
# ############################################################################ #

<#PatientIdentifier> a rr:TriplesMap;
  rml:logicalSource [
    rml:source "__RML_SRC__";
    rml:referenceFormulation ql:JSONPath;
    rml:iterator "$.entry[?(@.resource.resourceType == 'Patient')]"
  ];

  rr:subjectMap [
    rr:template "http://www.samsung.com/data/health/type/E42/id/{resource.identifier[0].value}";
    rr:class ho:E42Identifier;
  ];

  rr:predicateObjectMap [
    rr:predicate ho:P2hasType;
    rr:objectMap [
      rr:parentTriplesMap <#PatientIdentifierType>;
      rr:joinCondition [
        # @todo ask about use fullUrl instead user email as foreing key between classes
        #rr:child "fullUrl";
        #rr:parent "fullUrl";
        rr:child "resource.identifier[0].value";
        rr:parent "resource.identifier[0].value";
      ];
    ];
  ];

  rr:predicateObjectMap [
    rr:predicate ho:P3hasNote;
    rr:objectMap [
      rml:reference "resource.identifier[0].value";
    ]
  ];
.

<#PatientIdentifierType> a rr:TriplesMap;
  rml:logicalSource [
    rml:source "__RML_SRC__";
    rml:referenceFormulation ql:JSONPath;
    rml:iterator "$.entry[?(@.resource.resourceType == 'Patient')]"
  ];

  rr:subjectMap [
    rr:template "http://www.samsung.com/data/health?system=\"{resource.identifier[0].system}\"";
    rr:class ho:HLF209IdentifierType;
  ];

  rr:predicateObjectMap [
    rr:predicate ho:P3hasNote;
    rr:objectMap [
      rml:reference "resource.identifier[0].system";
    ]
  ];
.

# /PatientIdentifier
