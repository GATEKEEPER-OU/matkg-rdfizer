# ############################################################################ #
#                                  TimeSpan
# ############################################################################ #

# 85354-9 Vital Signs
# 73985-4 Exercise activity
#  8867-4 Heart rate
#  8302-2 Body height
# 20564-1 Oxygen saturation in Blood
# 93832-4 Sleep duration
# LP412113-5 Light sleep duration
# 93830-8 Light sleep duration
# 93831-6 Deep sleep duration
<#TimeSpan> a rr:TriplesMap;
  rml:logicalSource [
    rml:source "__RML_SRC__";
    rml:referenceFormulation ql:JSONPath;
    #rml:iterator "$.entry[?(@.resource.resourceType == 'Observation')]"
    rml:iterator "$.entry[?(@.resource.resourceType == 'Observation' && (@.resource.code.coding[0].code == '85354-9' || @.resource.code.coding[0].code == '73985-4' || @.resource.code.coding[0].code == '8867-4' || @.resource.code.coding[0].code == '8302-2' || @.resource.code.coding[0].code == '20564-1' || @.resource.code.coding[0].code == '93832-4' || @.resource.code.coding[0].code == 'LP412113-5' || @.resource.code.coding[0].code == '93830-8' || @.resource.code.coding[0].code == '93831-6'))]"
  ];

  rr:subjectMap [
    rr:template "http://www.samsung.com/health/data/type/TimeSpan/code/{resource.code.coding[0].code}/id/{fullUrl}";
    rr:class ho:E52TimeSpan;
  ];

  ## @todo resource.effectiveDateTime
  # rr:predicateObjectMap [
  #   rr:predicate ho:E61TimePrimitive; # @todo change only THIS
  #   rr:objectMap [
  #     rml:reference "resource.effectiveDateTime";
  #     rr:datatype xsd:dataTime
  #   ]
  # ];

  rr:predicateObjectMap [
    rr:predicate ho:FWP02Starts;
    rr:objectMap [
      rml:reference "resource.valuePeriod.start";
      rr:datatype xsd:dataTime
    ]
  ];

  rr:predicateObjectMap [
    rr:predicate ho:FWP03Ends;
    rr:objectMap [
      rml:reference "resource.valuePeriod.end";
      rr:datatype xsd:dataTime
    ]
  ];
.

# /TimeSpan